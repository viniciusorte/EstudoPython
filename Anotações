Aula 007
nome= input('Qual seu nome?')
print('Você é o {:20} eim?'.format(nome))
                {<  pra deixar 20 espaços na esquerda do nome
                {>                           direita
                {^  pra Centralizar o nome 10 espaços de cada lado
                {=^}no lugar do Espaços poe " = "

n1=int(input('Digite um número'))
n2=int(input('Digite outro'))
s=n1+n2
st=n1-n2
m=n1*n2
d=n1/n2
print('A soma é {}, a subtração é {}'.format(s , st))
print('O produto é {}, a divisão é {}'.format(m, d))
#Pra diminuir a qntd de decimais  {:.3f} pra ter apenas 3 decimais
print('A soma é {}, a subtração é{}'.format(s , st), end = '')   Pra não quebrar Linha
                                                   #Para não quebrar a linha
print('A soma é {}, \n a subtração é{}'.format(s , st), end = '') \n pra quebrar a linha


AULA 008    # Bibliotecas
import math        # Mais formas de conta
num=int(input('Digite um número'))
raiz= math.sqrt(num)                                                                      # Para arredondar pra cima
print('A raiz de {} é: {}'.format(num,raiz))     ou print('A raiz de {} é: {}'.format(num,math.ceil(raiz)))

import random      # Gera N° Random
import random
num=random.random()     ou   num=random.randint(1,10)    #Gerar N° Random de 1 a 10
print(num)

IMPORTAÇÃO ESPECÍFICA
QUANDO IMPORTAR MÓDULO ESPECÍFICO PODE TIRAR O (RANDOM.) E DEIXAR SÓ O CHOICE
from random import choice
aluno1=str(input('Nome do 1°aluno '))
aluno2=str(input('Nome do 2° aluno '))
aluno3=str(input('Nome do 3° aluno '))
aluno4=str(input('Nome do 4° aluno '))
lista= [aluno1,aluno2,aluno3,aluno4]
sorteio=choice(lista)
print('O sorteado para apagar o quadro foi: {}'.format(sorteio))